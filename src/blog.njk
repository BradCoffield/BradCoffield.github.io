<h2>Posts</h2>

<div id="blog-posts-list">

    
      <ul>
        {% for post in collections.post|sort(true, true, "date") %}
          <li style="margin: 3rem 0"><a href="{{post.url}}">{{ post.data.title }}</a> <div class="post-list-post-excerpt">
            {% excerpt post %}
         </div></li>
        {% endfor %}
        </ul>
        
     

</div>